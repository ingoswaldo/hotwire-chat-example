<%= render Layout::CardCenteredComponent.new(title: 'Forgot your password?') do %>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="form-control">
      <div class="field">
        <%= f.label :email, class: 'label' do %>
          <span class="label-text">Email</span>
        <% end %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input input-bordered focus:input-accent w-full max-w-xs' %>
      </div>
    </div>

    <div class="form-control mt-6">
      <%= f.submit "Send me reset password instructions", class: 'btn btn-success' %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
<% end %>