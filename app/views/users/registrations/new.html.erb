<%= render Layout::CardCenteredComponent.new(title: 'Sign up') do %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "shared/error_messages", resource: resource %>

    <div class="form-control">
      <div class="field">
        <%= f.label :email, class: 'label' do %>
          <span class="label-text">Email</span>
        <% end %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input input-bordered focus:input-accent w-full max-w-xs' %>
      </div>
    </div>

    <div class="form-control">
      <div class="field">
        <%= f.label :full_name, class: 'label' do %>
          <span class="label-text">Full Name</span>
        <% end %>
        <%= f.text_field :full_name, class: 'input input-bordered focus:input-accent w-full max-w-xs' %>
      </div>
    </div>

    <div class="form-control">
      <div class="field">
        <%= f.label :password, class: 'label' do %>
          <span class="label-text">Password</span>
        <% end %>
        <%= f.password_field :password, autocomplete: 'new-password', class: "input input-bordered focus:input-accent w-full max-w-xs" %>
      </div>
    </div>

    <div class="form-control">
      <div class="field">
        <%= f.label :password_confirmation, class: 'label' do %>
          <span class="label-text">Confirm Password</span>
        <% end %>
        <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'input input-bordered focus:input-accent w-full max-w-xs' %>
      </div>
    </div>

    <div class="form-control mt-6">
      <%= f.submit "Sign up", class: 'btn btn-success' %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
<% end %>