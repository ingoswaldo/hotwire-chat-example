<%= form_for(chat, url: chats_path, data: { controller: 'chat', 'chat-modal-id-value': 'modal-new-chat', action: 'turbo:submit-end->chat#reset' }) do |f| %>
  <%= render "shared/error_messages", resource: chat %>

  <div class="form-control">
    <div class="field">
      <%= f.label :receiver, class: 'label' do %>
        <span class="label-text">User</span>
      <% end %>
      <%= f.collection_select :receiver_id, users, :id, :email, prompt: true, class: 'select select-accent w-full max-w-xs' %>
    </div>
  </div>

  <div class="modal-action">
    <%= f.submit "Chat", class: 'btn btn-success' %>
  </div>
<% end %>