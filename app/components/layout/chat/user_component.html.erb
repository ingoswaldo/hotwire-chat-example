<div class="flex h-20 p-5">
  <div class="basis-1/6">
    <div class="avatar">
      <div class="w-10">
        <%= user.avatar(size: 40) %>
      </div>
    </div>
  </div>
  <div class="basis-4/5 max-w-[14rem]">
    <h3 class="font-semibold capitalize"><%= user.full_name %></h3>
    <p class="font-light text-sm truncate"><%= last_message %></p>
  </div>
  <div class="basis-1/6">
    <h3 class="font-light text-sm capitalize"><%= time %></h3>
  </div>
</div>